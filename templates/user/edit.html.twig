    </form>
    #}

    <hr>

    <h2>Mes projets</h2>
    {% if user.projects|length == 0 %}
        <p> Vous n'avez pas propos√© de projets pour le moment, lancez vous! üôÇ</p>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2">
            {% for project in user.projects  %}
                <div class="col mb-4">
                    <div class="card">
                        <img src="{{asset('uploads/projects/' ~ project.picture) }}" class="card-img-top" alt="{{ project.title }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ project.title }}</h5>
                            <p class="card-text">{{ project.excerpt }}</p>
                            <a href="{{path('project_show', {'id': project.id}) }}" class="btn btn-primary">
                                <i class="fa fa-eye"></i>
                                Voir plus
                            </a>
                            <a href="{{path('project_edit', {'id': project.id}) }}" class="btn btn-secondary">
                                <i class="fa fa-pencil"></i>
                                Modifier
                            </a>
                            <a href="{{path('project_delete', {'id': project.id}) }}" class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                                Supprimer
                            </a>
                        </div>
                        <div class="card-footer">
                            {% for category in project.categories  %}
                                <span class="badge badge-pill badge-primary" title="Cat√©gorie">
                                <i class="fa fa-tag"></i> {{ category.label }}
                                </span>
                            {% endfor %}
                            <span class="badge badge-pill badge-secondary" title="Ville">
                                <i class="fa fa-map-marker"></i>
                                {{ project.city.name }}
                            </span>
                            <span class="badge badge-pill badge-info" title="Date de proposition">
                                <i class="fa fa-calendar"></i>
                                Propos√© le {{ project.createdAt|date('m/d/Y')}}
                            </span>
                            <span class="badge badge-pill badge-warning" title="Co√ªt du projet">
                                <i class="fa fa-euro"></i>
                                {{ project.cost|number_format(0, '', ' ') }}
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="col mb-4">
                <a href="{{ path('project_new') }}" class="btn btn-lg btn-block btn-success">
                    <i class="fa fa-plus-circle"></i>
                    Proposer un nouveau projet
                </a>
            </div>
        </div>
    {% endif %}

    <hr>

    <h2><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Suppression du compte (irr√©versible) <i class="fa fa-exclamation-triangle" aria-hidden="true"></i></h2>
    <br>
