{% extends 'base.html.twig' %}

{% block title %}Projets selon catégorie{% endblock %}

{% block body %}
{{ render(controller('App\\Controller\\DefaultController::catMenu')) }}
    <main class="main-content container">

        <h2>{{ category.projects|length }} projet(s) dans la catégorie "{{ category.label }}"</h2>


        <div class="row row-cols-1 row-cols-md-3">

            {% for project in category.projects  %}
                <div class="col mb-4">
                    {% include '/project/_card.html.twig' with {'project' : project} only %}
                </div>
            {% endfor %}
        </div>

    </main>
{% endblock %}
